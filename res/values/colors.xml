<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="PlaylistBackground">#101015</color>
    <color name="PlaylistDivider">#EEEFEF</color>
    <color name="PlayingBackground">#D2DFB5</color>
    <color name="infoBackground">#CCCCCC</color>
       
            
    <style name="PlaylistTheme" parent="android:Theme">
        <item name="android:background">@color/PlaylistBackground</item>
 		<item name="android:textSize">18sp</item>
    </style>

	<style name="PlayingTheme" parent="android:Theme">
		<item name="android:background">@color/PlaylistBackground</item>
		<item name="android:textSize">16sp</item>
	</style>
	
	<style name="MainTheme" parent="android:Theme">
		<item name="android:background">@color/PlaylistBackground</item>
		<item name="android:textSize">32sp</item>
		<item name="android:divider">@color/PlaylistBackground</item>
		<item name="android:dividerHeight">4sp</item>
	</style>
	
	<style name="HeaderTheme" parent="android:Theme">
		<item name="android:background">#D2DFB5</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#000200</item>
		<item name="android:shadowColor">#0f0f0f</item>
        <item name="android:shadowRadius">1.6</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item> 
	</style>

	<style name="noTitle" parent="android:Theme">
		<item name="android:windowNoTitle">true</item>
	</style>
    
</resources>